{% extends 'base.html.twig' %}

{% block title %}Societe{% endblock %}

{% block body %}
    <h1>Societe</h1>
    <div> 
        {{ form_start(searchForm, {'action': path('societe_show', {'id':societe.id}), 'method': 'POST'}) }}
            {{ form_widget(searchForm) }}
            <button class="btn">{{ button_label|default('Revert') }}</button>
        {{ form_end(searchForm) }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ societe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ societe.nom }}</td>
            </tr>
            <tr>
                <th>NumeroSiren</th>
                <td>{{ societe.numeroSiren }}</td>
            </tr>
            <tr>
                <th>VilleImmatriculation</th>
                <td>{{ societe.villeImmatriculation }}</td>
            </tr>
            <tr>
                <th>DateImmatriculation</th>
                <td>{{ societe.dateImmatriculation ? societe.dateImmatriculation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('societe_index') }}">back to list</a>

    <a href="{{ path('societe_edit', {'id': societe.id}) }}">edit</a>

    {{ include('societe/_delete_form.html.twig') }}
{% endblock %}
